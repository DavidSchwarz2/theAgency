{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "backend/app",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run uvicorn app.main:app --reload --port 8000",
        "cwd": "backend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest app/tests/ -v",
        "cwd": "backend"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check app/",
        "cwd": "backend"
      }
    },
    "lint-fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check app/ --fix",
        "cwd": "backend"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run mypy app/",
        "cwd": "backend"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run alembic upgrade head",
        "cwd": "backend"
      }
    },
    "migrate-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run alembic downgrade -1",
        "cwd": "backend"
      }
    },
    "makemigration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run alembic revision --autogenerate -m",
        "cwd": "backend"
      }
    }
  }
}
